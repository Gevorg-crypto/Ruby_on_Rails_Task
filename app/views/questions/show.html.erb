<p><%= @question.description %></p>
<span>Point: <strong><%= @question.point %></strong></span>
<hr>
<%= link_to "Edit Question" , edit_question_path(@question) , :class => "btn btn-outline-warning" %>
<%= link_to "Delete Question" , question_path(@question) ,method: :delete, data:{confirm:'Are you sure?'}, :class => "btn btn-outline-danger" %>
<hr>
<h4>All Answers </h4>
<div class="d-flex">
  <% @question.answers.each do |answer| %>
    <p class="alert <%= answer.right === true ? 'alert-success' : 'alert-light' %>"><%= answer.description %></p>
  <% end %>
</div>
