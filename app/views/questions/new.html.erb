<h2>New Question </h2>
<% if @question.errors.any? %>
  <% @question.errors.full_messages.each do |msg| %>
    <span class="alert alert-danger"><%= msg %></span>
  <% end %>
<% end %>
<%= form_for :question, url: questions_path, method: :post do |f| %>
  <p>Description <br>
    <%= f.text_area(:description, {:class => 'form-control'}) %>
  </p>
  <p>Point <br>
    <%= f.number_field(:point, {:class => 'form-control'}) %>
  </p>
  <hr>
  <%= f.fields_for :answers do |answer| %>
    <div class=" form-group d-flex">
        <div>
          <label>Answer one</label>
          <%= answer.text_area(:description, {:class => 'form-control',multiple: true}) %>
          <div class="form-check">
            <%= answer.check_box(:right, {:class => 'form-check-input',multiple: true}) %>
            <label class="form-check-label" >Right</label>
          </div>
        </div>
      <div>
        <label>Answer Two</label>
        <%= answer.text_area(:description, {:class => 'form-control',multiple: true}) %>
        <div class="form-check">
          <%= answer.check_box(:right, {:class => 'form-check-input',multiple: true}) %>
          <label class="form-check-label" >Right</label>
        </div>
      </div>
      <div>
        <label>Answer Tree</label>
        <%= answer.text_area(:description, {:class => 'form-control',multiple: true}) %>
        <div class="form-check">
          <%= answer.check_box(:right, {:class => 'form-check-input',multiple: true}) %>
          <label class="form-check-label" >Right</label>
        </div>
      </div>
      <div>
        <label>Answer Fore</label>
        <%= answer.text_area(:description, {:class => 'form-control',multiple: true}) %>
        <div class="form-check">
          <%= answer.check_box(:right, {:class => 'form-check-input',multiple: true}) %>
          <label class="form-check-label" >Right</label>
        </div>
      </div>
    </div>
  <% end %>
  <%= f.submit({:class => 'btn btn-primary'}) %>

<% end %>
